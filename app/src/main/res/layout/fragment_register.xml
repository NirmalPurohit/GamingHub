<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nirmal.gaminghub.RegisterFragment"
    android:background="@drawable/header_bkgrnd">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#79242424">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uname"
            android:layout_marginTop="30dp"
            android:hint="User Name"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass"
            android:layout_marginTop="30dp"
            android:hint="Password, 8 Characters min"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:textColor="#ffffff"
            android:hint="Age"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/reg"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/downloadbutton"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>
